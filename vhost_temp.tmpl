server {
        listen {{ nginx_port }};
        root /var/www/html/{{ nginx_website }};
        index index.php index.html index.htm;
        server_name {{ nginx_website }};

        location / {
            try_files $uri $uri/ =404;
        }

        location ~ \.php$ {
            include snippets/fastcgi-php.conf;
            fastcgi_pass unix:/var/run/php/php7.2-fpm.sock;
        }
}
